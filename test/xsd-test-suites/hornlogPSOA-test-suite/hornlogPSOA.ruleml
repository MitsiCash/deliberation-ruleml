<?xml version="1.0" encoding="UTF-8"?>
<RuleML xmlns="http://ruleml.org/spec" xmlns:this="http://example.org/hornlogPSOA.ruleml"
  xmlns:xs="http://www.w3.org/2001/XMLSchema" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://ruleml.org/spec ../../../xsd/hornlogPSOA_normal.xsd">

  <!-- note the addition of the XML Schema namespace because a built-in datatype is used -->

  <!-- a syntactic example rulebase for testing the Datalog PSOA RuleML sublanguage -->
  <act index="1">
    <Assert mapClosure="universal">

      <formula>
        <Implies node="this:#rule1">
          <if>
            <Atom>
              <oid>
                <Ind>John</Ind>
              </oid>
              <op>
                <Rel>TA</Rel>
              </op>
              <arg index="1">
                <Expr>
                  <op>
                    <Fun>Professor</Fun>
                  </op>
                  <arg index="1">
                    <Ind>Suneel</Ind>
                  </arg>
                  <slotdep>
                    <Ind>wife</Ind>
                    <Ind>Rima</Ind>
                  </slotdep>
                </Expr>
              </arg>
              <arg index="2">
                <Ind>Sue</Ind>
              </arg>
              <slotdep>
                <Ind>workload</Ind>
                <Ind>high</Ind>
              </slotdep>
              <slot>
                <Ind>freetime</Ind>
                <Ind>low</Ind>
              </slot>
            </Atom>
          </if>
          <then>
            <Atom>
              <op>
                <Rel>friend</Rel>
              </op>
              <slotdep>
                <Ind>time</Ind>
                <Data xsi:type="xs:dateTime">2001-10-26T21:32:52+02:00</Data>
              </slotdep>
            </Atom>
          </then>
        </Implies>
      </formula>
    </Assert>
  </act>
</RuleML>
